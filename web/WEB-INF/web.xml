<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.fan.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.fan.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/UserServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GoodsTypeServlet</servlet-name>
        <servlet-class>com.fan.servlet.GoodsTypeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoodsTypeServlet</servlet-name>
        <url-pattern>/GoodsTypeServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GoodsInfoServlet</servlet-name>
        <servlet-class>com.fan.servlet.GoodsInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoodsInfoServlet</servlet-name>
        <url-pattern>/GoodsInfoServlet</url-pattern>
    </servlet-mapping>

</web-app>